<%= form_with(model: [@food, @recipe_food], url: recipes_create_ingredient_path(@recipe), method: :post, scope: @food, 
  html: { class: 'ingredient-form-create' }, data: { turbo: false }) do |form| %>
  <% if @food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% @food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 
  <% if @recipe_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% @recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 
  
  <div class="field mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter the food", class: 'form-control' %>
  </div>
   <div class="field mb-3">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, placeholder: "Enter the measurement unit", class: 'form-control' %>
  </div>
  <div class="field mb-3">
    <%= form.label :price %>
    <%= form.text_field :price, placeholder: "Enter the price", class: 'form-control' %>
  </div>    
  <div class="field mb-3">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, name: 'recipe_food[quantity]', placeholder: "Enter a quantity", class: 'form-control' %>
  </div>    
    
    <%= form.submit 'Submit', class:"btn btn-primary"%>

<% end %>
